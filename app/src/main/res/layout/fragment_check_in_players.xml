<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playersGridView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Fragments.CheckInPlayers">

    <!-- TODO: display player with grid  layout -->
    <GridView
        android:id="@+id/playersGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="150dp"
        android:gravity="center"
        android:horizontalSpacing="24dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="24dp"
        android:layout_marginRight="100dp">

    </GridView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >
        <Button
        android:id="@+id/addNewPlayer"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="140dp"
        android:background="@color/colorPrimary"
        android:text="Add Player"
        android:textColor="@color/colorBackground"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:textSize="28dp"
        android:visibility="visible" />
        <TextView
            android:id="@+id/numOfPlayers"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="Total"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            />

        <Button
        android:id="@+id/juniorPlayers"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="140dp"
        android:background="@color/colorPrimary"
        android:text="Junior Player"
        android:textColor="@color/colorBackground"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:textSize="28dp"
        android:visibility="visible" />
        <Button
            android:id="@+id/seniorPlayers"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="140dp"
            android:background="@color/colorPrimary"
            android:text="Senior Player"
            android:textColor="@color/colorBackground"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="28dp"
            android:visibility="visible" />
