<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorWhite"
    tools:context=".Fragments.Timer">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:rowCount="5"
        android:columnCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/warmpUpLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/warmUpTimerText"
                style="@style/TimerTextView" />
            <EditText
                android:id="@+id/warmupText"
                style="@style/TimerEditText" />
            <SeekBar
                android:id="@+id/warmupSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footworkDrillLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/footWorkDrillsTimerText"
                style="@style/TimerTextView" />
            <EditText
                android:id="@+id/footworkDrillText"
                style="@style/TimerEditText" />
            <SeekBar
                android:id="@+id/footworkDrillsSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/breakLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/breakTimerText"
                style="@style/TimerTextView" />
            <EditText
                android:id="@+id/breakText"
                style="@style/TimerEditText" />
            <SeekBar
                android:id="@+id/breakSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/matchLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/matchTimerText"
                style="@style/TimerTextView" />
            <EditText
                android:id="@+id/matchText"
                style="@style/TimerEditText" />
            <SeekBar
                android:id="@+id/matchSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coolDownLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:gravity="fill"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/coolDownTimerText"
                style="@style/TimerTextView"/>
            <EditText
                android:id="@+id/cooldownText"
                style="@style/TimerEditText" />
            <SeekBar
                android:id="@+id/cooldownSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="3" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical">
        <Button
            android:id="@+id/playPauseButton"
            android:text="START"
            style="@style/CenterRoundButton" />
    </LinearLayout>
</LinearLayout>