<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorButton"
    tools:context=".Fragments.FootworkDrills">

    <GridLayout
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="88dp"
        android:paddingRight="90dp"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:rowCount="3"
        android:columnCount="2"
        android:background="@drawable/halfcourt"
        android:layout_weight="9">

        <ImageView
            android:id="@+id/position1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/position1" />

        <ImageView
            android:id="@+id/position2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="end"
            app:srcCompat="@drawable/position2" />

        <ImageView
            android:id="@+id/position3"
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/position3" />

        <ImageView
            android:id="@+id/position4"
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="end"
            app:srcCompat="@drawable/position4" />

        <ImageView
            android:id="@+id/position5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/position5" />

        <ImageView
            android:id="@+id/position6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="end"
            app:srcCompat="@drawable/position6" />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/textViewInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:text="Interval: 02:00 seconds"
            android:textSize="30sp"/>
        <!--<Spinner-->
            <!--android:id="@+id/intervalSpinner"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/margin_10"-->
            <!--android:textSize ="28sp"-->
            <!--style="@style/CustomSpinner"-->

            <!--&gt;</Spinner>-->
        <SeekBar
            android:id="@+id/seekBarInterval"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/margin_10"
            android:thumbTint="@color/colorText"
            android:theme="@style/SeekBarTheme"
            android:min="100"
            android:max="1000"
            android:progress="200"
            android:layout_gravity="fill_horizontal"/>
        <!--<TextView-->
            <!--android:id="@+id/textViewInterval"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </LinearLayout>

    <!--style="@style/CenterRoundButton"-->
    <Button
        android:id="@+id/startDrillButton"
        android:text="Start"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/colorText"
        android:background="@drawable/circular_button"
        android:layout_centerInParent="true"
         />
</RelativeLayout>


