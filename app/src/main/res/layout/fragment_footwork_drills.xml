<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rowCount="3"
    android:columnCount="2"
    android:paddingLeft="88dp"
    android:paddingRight="90dp"
    android:paddingBottom="90dp"
    android:paddingTop="60dp"
    android:background="@drawable/halfcourt"
    tools:context=".Fragments.FootworkDrills">

    <ImageView
        android:id="@+id/position1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        app:srcCompat="@drawable/position1" />

    <ImageView
        android:id="@+id/position2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="end"
        app:srcCompat="@drawable/position2" />

    <ImageView
        android:id="@+id/position3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/position3" />

    <ImageView
        android:id="@+id/position4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="150dp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/position4" />

    <ImageView
        android:id="@+id/position5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/position5" />

    <ImageView
        android:id="@+id/position6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="end||bottom"
        app:srcCompat="@drawable/position6" />


</GridLayout>


